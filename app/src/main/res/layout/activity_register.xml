<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity">

    <include layout="@layout/common_toolbar_no_scroll" />

    <EditText
        android:id="@+id/reg_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_48"
        android:background="@drawable/bg_conner_grey"
        android:layout_marginStart="@dimen/h_48"
        android:layout_marginEnd="@dimen/h_48"
        android:inputType="textPassword"
        android:hint="@string/register_password_hint"
        android:textColorHint="@color/light_white"
        android:layout_centerInParent="true"
        android:padding="@dimen/sp_12"
        android:drawableLeft="@drawable/ic_register_password"
        android:drawablePadding="@dimen/h_20" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_48"
        android:layout_above="@id/reg_psw"
        android:layout_marginBottom="@dimen/h_36"
        android:layout_marginEnd="@dimen/h_48"
        android:layout_marginStart="@dimen/h_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/h_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/register_account_hint"
        android:inputType="number"
        android:padding="@dimen/sp_12"
        android:textColorHint="@color/light_white" />

    <EditText
        android:id="@+id/reg_repsw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_48"
        android:background="@drawable/bg_conner_grey"
        android:layout_marginStart="@dimen/h_48"
        android:layout_marginEnd="@dimen/h_48"
        android:inputType="textPassword"
        android:hint="@string/register_confirm_password_hint"
        android:textColorHint="@color/light_white"
        android:layout_below="@id/reg_psw"
        android:layout_marginTop="6dp"
        android:padding="@dimen/sp_12"
        android:drawableLeft="@drawable/ic_register_password"
        android:drawablePadding="@dimen/h_20" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_48"
        android:background="@drawable/bg_conner_green"
        android:layout_marginStart="@dimen/h_48"
        android:layout_marginEnd="@dimen/h_48"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:layout_below="@id/reg_repsw"
        android:layout_marginTop="@dimen/h_60"/>

</RelativeLayout>