<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:drawableLeft="@mipmap/icon_author"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="what aaaaaaaaa"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/chapterName"
                android:layout_width="wrap_content"
                android:textColor="#bf33efcd"
                android:text="四大组件"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:maxLines="3"
            android:text="Android Handler: 手把手带你深入分析Handler机制源码"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/icon_like_article_not_selected"
                android:layout_width="@dimen/h_25"
                android:layout_height="@dimen/h_25" />

            <TextView
                android:id="@+id/niceDate"
                android:drawableLeft="@drawable/ic_time"
                android:text="asd asd "
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
